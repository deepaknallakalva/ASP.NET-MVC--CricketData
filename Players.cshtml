@model CricketData.Models.ViewModels.PlayersViewModel
@using CricketData.Models.ViewModels
@{
    Layout = null;
    CricketData.Models.ViewModels.CustomerViewModel currentCustomer = ViewBag.Customer;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Players</title>
</head>
<body>
    <style>
        h1 {
            font-family:Arial;
            font-size: 150%;
            color: white;
            text-align: center;
        }


        body {
            background-color: steelblue;
        }

        topright {
            font-family:Arial;
            font-size: 150%;
            position: absolute;
            top: 20px;
            right: 16px;
        }
    </style>
    <div>
        <br /><br />
        @{
            foreach (PlayerViewModel playerViewModel in Model.Players)
            {
                <h1>
                    @Html.ActionLink(playerViewModel.Name, "Player", "Home", new { playerID = playerViewModel.Id }, new { })
                </h1>
            }
            if (currentCustomer == null)
            {
                @Html.ActionLink("Login", "Login", "Home");
            }
            else
            {
                <topright>
                    
                        
                            Logged in as @currentCustomer.FirstName @currentCustomer.LastName
                        
                    
                </topright>
            }

        }
        

    </div>
</body>
</html>
